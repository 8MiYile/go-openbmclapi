[Unit]
Description=Go-OpenBmclAPI Service
Documentation=https://github.com/LiterMC/go-openbmclapi
Wants=basic.target
After=network.target

[Service]
Type=simple
ExecStart=/opt/openbmclapi/start-server.sh
ExecReload=/opt/openbmclapi/reload-server.sh
ExecStop=/opt/openbmclapi/stop-server.sh
RestartSec=30
Restart=on-failure
TimeoutSec=6

[Install]
WantedBy=multi-user.target
